<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Ввійти</a></li>
                <li class="tab col s6"><a class="active" href="#register">Реєстрація</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h1>Ввійти в магазин</h1>
            {{#if error}}
                <div class="alert">{{error}}</div>
            {{/if}}
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введіть email"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введіть пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary" type="submit">Вхід</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h1>Створити акаунт</h1>
            {{#if error}}
                <div class="alert">{{error}}</div>
            {{/if}}
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Ім'я</label>
                    <span class="helper-text" data-error="Введіть ім'я"></span>
                </div>

                <div class="input-field">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введіть email"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Пароль</label>
                    <span class="helper-text" data-error="Введіть пароль"></span>
                </div>

                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Пароль ще раз</label>
                    <span class="helper-text" data-error="Введіть пароль"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button class="btn btn-primary" type="submit">Зареєструватися</button>
            </form>
        </div>
    </div>
</div>