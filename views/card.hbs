<h1>Корзина</h1>

<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Назва</th>
                <th>Кількість</th>
                <th>Дія</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id={{id}}>Видалити</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Ціна:</strong> <span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
        <button type="submit" class="btn btn-primary">Зробити замовлення</button>
    </form>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
</div>