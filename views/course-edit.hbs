<h1>Редагувати курс {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field col s6">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Назва курсу</label>
        <span class="helper-text" data-error="Введіть назву курсу"></span>
    </div>

    <div class="input-field col s6">
        <input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Ціна курсу</label>
        <span class="helper-text" data-error="Введіть ціну курсу"></span>
    </div>

    <div class="input-field col s6">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введіть URL картинки"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Редагувати курс</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red">Видалити курс</button>
</form>